{
    "compilerOptions": {
        "target": "ES5",
        "moduleResolution": "node",
        "declarationDir": "esm",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "composite": true,
        "strict": true,
        "jsx": "react-jsx",
        "downlevelIteration": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ]
}