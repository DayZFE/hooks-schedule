{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declarationDir": "esm",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "composite": true,
        "strict": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM",
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ]
}